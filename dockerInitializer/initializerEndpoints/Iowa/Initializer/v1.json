  "item": [
    {
      "name": "Seed Providers",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "const secretKey = 'secretKey'; // phải khớp với appsettings.json\r",
              "const now = new Date();\r",
              "const pad = (n) => n.toString().padStart(2, '0');\r",
              "const timestamp =\r",
              "    now.getFullYear().toString() +\r",
              "    pad(now.getMonth() + 1) +\r",
              "    pad(now.getDate()) +\r",
              "    pad(now.getHours()) +\r",
              "    pad(now.getMinutes()) +\r",
              "    pad(now.getSeconds());\r",
              "\r",
              "// Tạo nonce ngẫu nhiên\r",
              "const nonce = Math.random().toString(36).substring(2, 10); // hoặc dùng crypto.randomUUID() nếu Postman hỗ trợ\r",
              "\r",
              "// Tạo HMAC từ secretKey + timestamp + nonce\r",
              "const message = timestamp + nonce;\r",
              "const hash = CryptoJS.HmacSHA256(message, secretKey).toString(CryptoJS.enc.Hex);\r",
              "\r",
              "// Gán vào headers\r",
              "pm.request.headers.upsert({ key: \"X-Timestamp\", value: timestamp });\r",
              "pm.request.headers.upsert({ key: \"X-Nonce\", value: nonce });\r",
              "pm.request.headers.upsert({ key: \"X-Machine-Hash\", value: hash });"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{iowa-docker}}/api/initializer/seed-providers",
          "host": [
            "{{iowa-docker}}"
          ],
          "path": [
            "api",
            "initializer",
            "seed-providers"
          ]
        }
      },
      "response": []
    },
